@page "/admin/companies"
@using BalzorAppVlan.Components.Pages.Shared
@using BalzorAppVlan.Services
@using Microsoft.AspNetCore.Authorization
@inject ICompanyService CompanyService
@inject IJSRuntime JS
@rendermode InteractiveServer
@attribute [Authorize(Roles = "Admin")]

<h3>Companies & Locations</h3>

<button class="btn btn-success mb-3" @onclick="() => OpenDialog(new CompanyViewModel())">➕ Add Root Company</button>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Company / Location</th>
            <th>Verified</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (companies is not null)
        {
            @foreach (var c in companies)
            {
                @RenderCompanyRow(c, 0)
            }
        }
    </tbody>
</table>

<!-- Modal -->
@if (showDialog)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@((selectedCompany?.Id == null) ? "Add Company/Location" : "Edit Company/Location")</h5>
                    <button type="button" class="btn-close" @onclick="CloseDialog"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="selectedCompany" OnValidSubmit="Save">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <InputText class="form-control" @bind-Value="selectedCompany.Name" />
                            <ValidationMessage For="@(() => selectedCompany.Name)" />
                        </div>

                        <div class="form-check mb-3">
                            <InputCheckbox class="form-check-input" @bind-Value="selectedCompany.IsVerified" />
                            <label class="form-check-label">Verified</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Wallet Address</label>
                            <InputText class="form-control" @bind-Value="selectedCompany.Name" />
                            <ValidationMessage For="@(() => selectedCompany.Name)" />
                        </div>
                        @if (selectedCompany.ParentCompanyId != null)
                        {
                            <div class="alert alert-info">
                                This will be added under Parent Company:
                                <strong>@selectedCompany.ParentCompanyName</strong>
                            </div>
                        }

                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary ms-2" @onclick="CloseDialog">Cancel</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

<!-- Toast -->
<Toast Message="@toastMessage"
       CssClass="@toastCssClass"
       Duration="3000"
       OnClose="ClearToast" />

@code {
    private List<CompanyViewModel>? companies;
    private bool showDialog = false;
    private CompanyViewModel selectedCompany = new();

    // Toast State
    private string toastMessage = string.Empty;
    private string toastCssClass = "bg-success";

    protected override async Task OnInitializedAsync()
    {
        companies = await CompanyService.GetAllHierarchyAsync();
    }

    private void OpenDialog(CompanyViewModel companyVm)
    {
        selectedCompany = new CompanyViewModel
        {
            Id = companyVm.Id,
            Name = companyVm.Name,
            IsVerified = companyVm.IsVerified,
            ParentCompanyId = companyVm.ParentCompanyId
        };

        showDialog = true;
    }

    private void OpenChildDialog(int parentId)
    {
        var parent = companies?.SelectMany(FlattenCompanies).FirstOrDefault(c => c.Id == parentId);
        selectedCompany = new CompanyViewModel
        {
            ParentCompanyId = parentId,
            ParentCompanyName = parent?.Name
        };
        showDialog = true;
    }

    private void CloseDialog() => showDialog = false;

    private async Task Save()
    {
        var result = await CompanyService.AddOrEditAsync(selectedCompany);

        toastCssClass = result.Success ? "bg-success" : "bg-danger";
        toastMessage = result.Message;

        companies = await CompanyService.GetAllHierarchyAsync();
        showDialog = false;
    }

    private async Task Delete(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"Are you sure to delete this company and its sub-companies?"))
        {
            var result = await CompanyService.DeleteAsync(id);

            toastCssClass = result.Success ? "bg-success" : "bg-danger";
            toastMessage = result.Message;

            companies = await CompanyService.GetAllHierarchyAsync();
        }
    }

    private void ClearToast()
    {
        toastMessage = string.Empty;
    }
    private IEnumerable<CompanyViewModel> FlattenCompanies(CompanyViewModel c)
    {
        yield return c;
        if (c.SubCompanies != null)
        {
            foreach (var child in c.SubCompanies.SelectMany(FlattenCompanies))
                yield return child;
        }
    }
    // Recursive Row Renderer
    private RenderFragment RenderCompanyRow(CompanyViewModel company, int level) => __builder =>
    {
        <tr>
            <td style="padding-left:@(level * 20)px">
                @(level > 0 ? "↳ " : "") @company.Name
            </td>
            <td>@(company.IsVerified ? "✔️" : "❌")</td>
            <td>
                <button class="btn btn-success btn-sm me-2"
                        @onclick="() => OpenChildDialog(company.Id.Value)">
                    ➕ Add Child
                </button>
                <button class="btn btn-primary btn-sm me-2"
                        @onclick="() => OpenDialog(company)">
                    ✏️ Edit
                </button>
                <button class="btn btn-danger btn-sm"
                        @onclick="() => Delete(company.Id.Value)">
                    🗑 Delete
                </button>
            </td>
        </tr>
        ;

        if (company.SubCompanies != null && company.SubCompanies.Any())
        {
            foreach (var child in company.SubCompanies)
            {
                __builder.AddContent(1, RenderCompanyRow(child, level + 1));
            }
        }
    };
  
}
